<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="POSApp.Views.ConfigurationErrorWindow"
        Title="Configuration Error"
        Width="400" Height="200"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <Border Padding="20" Margin="10"
            CornerRadius="10"
            BorderBrush="DarkRed"
            BorderThickness="2"
            Background="#FFF8F8">

        <StackPanel VerticalAlignment="Center" Spacing="15">
            <TextBlock Text="âš  Configuration Error"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="DarkRed"
                       HorizontalAlignment="Center" />

            <TextBlock Text="The configuration file was not found. 
Make sure you set up this application correctly."
                       FontSize="14"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="Black"
                       Margin="10 0" />

        </StackPanel>
    </Border>
</Window>